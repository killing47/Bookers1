<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
<div class="field">
  <%= f.label :Title %>
  <%= f.text_field :title, class: "book_title" %>
</div>
<div class="field">
  <%= f.label :Body %>
  <%= f.text_area :body, class: "book_body" %>
</div>
<div class="actions">
   <%= f.submit 'Create Book' %>
</div>
<% end %>

<%= link_to 'Show',post_path, class: "show_#{id}" %>
|
<%= link_to 'Back',posts_path, class: "back" %>
