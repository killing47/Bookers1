<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag current_user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to  "",  edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"  %>
    </div>
    <h2>New book</h2>
    <%= form_for(@new_book) do |f| %>

    <% if @new_book.errors.any? %>
        <%= @new_book.errors.count %>件のエラーが発生しました
        <% @new_book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>

     <div class="field row">
      <%= f.label :Title %>
      <%= f.text_field :title, class: "col-xs-12 book_title" %>
     </div>
     <div class="field row">
       <%= f.label :Opinion %>
       <%= f.text_area :body, class: "col-xs-12 book_body"%>
      </div>
      <div class="actions row">
       <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12"%>
      </div>
     <% end %>
  </div>
  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>
            <%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @book.user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
           <%= @book.user.name %>
           <% end %>
          </th>
           <% if @book.user == current_user %>
           <th><%= @book.title %></th>
           <th><%= @book.body %></th>
           <th> <%= link_to  "Edit",  edit_book_path %></th>
           <th><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
           <% else %>
           <th><%= @book.title %></th>
           <th><%= @book.body %></th>
           <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
