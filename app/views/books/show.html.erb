<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag current_user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
    <% if @user == current_user %>
      <%= link_to  "",  edit_user_path, class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"  %>
    <% end %>
    </div>
    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
     <div class="field row">
      <%= f.label :Title %>
      <%= f.text_field :title, class: "col-xs-12 book_title" %>
     </div>
     <div class="field row">
       <%= f.label :Opinion %>
       <%= f.text_area :body, class: "col-xs-12 book_body"%>
      </div>
      <div class="actions row">
       <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12"%>
      </div>
     <% end %>
  </div>
  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
      <% @user.books.each do |f| %>
        <tr>
           <th><%= attachment_image_tag f.user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></th>
           <th><%= f.title %></th>
           <th><%= f.body %></th>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
