<h2>User info</h2>
<%= form_for(@user, url: user_path) do |f| %>
  <div class="field">
   <%= f.label :Name %>
   <%= f.text_field :name, class: "name" %>
  </div>
  <div class="field">
    <div class="user-edit-image">
     <%= f.label :image %>
     <%= f.attachment_field :image %>
  </div>
  <div class="field">
    <%= f.label :Introduction %>
    <%= f.text_area :introduction, class: "introduction" %>
  </div>
  <div class="actions">
    <%= f.submit 'Update User' %>
  </div>
<% end %>
