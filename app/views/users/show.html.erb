<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <img src="#" />
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to  "#", class: "glypicon glypicon-wrencd" %>

    </div>
    <h2>New book</h2>
    <%= form_for(@user) do |f| %>
     <div class="field">
      <%= f.label :Title %>

     </div>
     <div class="field">
       <%= f.label :Opinion %>

      </div>
      <div class="actions">
       <%= f.submit 'Create Book' %>
      </div>
     <% end %>

  </div>
  <div class="col-xs-9">
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    </table>
  </div>
</div>
