<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to "",  "edit_user_path", class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"  %>

    </div>
    <h2>New book</h2>
    <%= form_for(@user) do |f| %>
     <div class="field">
      <%= f.label :Title %>
      <%= f.text_filed :title %>
     </div>
     <div class="field">
       <%= f.label :Opinion %>
       <%= f.text_area :body %>
      </div>
      <div class="actions">
       <%= f.submit 'Create Book' %>
      </div>
     <% end %>

  </div>
  <div class="col-xs-9">
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    </table>
  </div>
</div>
